# Run lint-staged for Prettier and ESLint on staged files
npx lint-staged ||
(
    echo 'âŒ lint-staged failed. Please fix the issues listed above, add changes, and try committing again.';
    false;
)

# Run lint-staged for Prettier and ESLint on staged files
npm run lint:types ||
(
    echo 'âŒ lint-types failed. Please fix the issues listed above, add changes, and try committing again.';
    false;
)

# If lint-staged passes, try to create a production build
echo 'ğŸ‘·ğŸ”¨ Creating production build...'

npm run build ||
(
    echo 'âŒ Build failed. Fix build errors and try committing again.';
    false;
)

# If everything passes... We can commit
